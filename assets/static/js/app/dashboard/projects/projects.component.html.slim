.row
  .col-md-6
    h1 Projects
  .col-md-6.align-right
    a.btn.btn-primary routerLink="./new" Create Project
.row
  .col-md-12.col-lg-10
    .material-card
      .card-content
        table.table.table-hover
          thead
            tr
              th #
              th Name
              th Description
          tbody
            tr *ngFor="let project of projects" bind-hidden="loading" on-click="redirectTo(project)"
              th {{project.id}}
              td {{project.name}}
              td {{project.description}}
        .loader bind-hidden="!loading"
          .spinner
